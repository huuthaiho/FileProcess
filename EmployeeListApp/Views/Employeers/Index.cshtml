
@model IEnumerable<DataModel.Employeer>

@{
    ViewBag.Title = "Index";
}

<h2>Employeer List</h2>

<div>

    <table border="1">
        <tr>
            <th>
                @Html.ActionLink("CompanyName", "Index", new { sortBy = ViewBag.NameSort })

            </th>
            <th>
                @Html.ActionLink("YearOfBusiness", "Index", new { sortBy = ViewBag.YearSort })
            </th>
            <th>
                @Html.ActionLink("Contactor", "Index", new { sortBy = ViewBag.ContactorSort })
              
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>



            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="6">
                    No records
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearOfBusiness)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Contactor)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            </tr>
            }
        }
    </table>

</div>